@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/recipecards.jpg" alt="Old Recipe Cards" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Safely store your old recipes in our database.
                    <a class="btn btn-default" asp-controller="Account" asp-action="Login">
                        Login
                    </a>
                    or
                    <a class="btn btn-default" asp-controller="Account" asp-action="Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/groceries.jpg" alt="Groceries" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Get help with meal plans and grocery lists.
                    <a class="btn btn-default" asp-controller="Account" asp-action="Login">
                        Login
                    </a>
                    or
                    <a class="btn btn-default" asp-controller="Account" asp-action="Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/feast.jpg" alt="Meals" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Get step-by-step recipes and browse our library.
                    <a class="btn btn-default" asp-controller="Account" asp-action="Login">
                        Login
                    </a>
                    or
                    <a class="btn btn-default" asp-controller="Account" asp-action="Register">
                        Register
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
