@model WebApplication.Web.Models.MealPlan

@{
    ViewData["Title"] = "MealPlanDetail";
}

<h2>@Model.Name</h2>

<div>
    <h4>Day 1</h4>

        <div>@Model.Meals[0].Name</div>

        @foreach (Recipe recipe in Model.Meals[0].Recipes)
        {
            <div><a asp-controller="Recipe" asp-action="Detail" asp-route-id="@recipe.RecipeId">@recipe.Name </a></div>
        }
</div>

